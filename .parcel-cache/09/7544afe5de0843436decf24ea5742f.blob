* {
    box-sizing: border-box;
    font-family: Inter, san-serif;
}

html, body{ 
    width: 100%;
    min-height: 100%;
    height: 100%;
    padding: 0;
    margin: 0;
}

body {
    padding: 40px;
    transition: background-color .25s;
}

ul {
    padding: 0;
    margin: 0;
    list-style-type: none;
}

li {
    padding: 4px 0;
}

a {
    color: inherit;
}

/* Layouts */

.max {
    display: flex;
    flex-direction: column;
    gap: 24px;

    position: relative;
    width: 100%;
    min-height: 100%;
    height: 100%;

}

.full {
    position: relative;
    width: 100%;
}

.threequarter {
    width: 75%;
}

.half { 
    display: flex;
    flex-direction: column;
    gap: 12px;

    width: 50%;

}


.quarter {
    display: flex;
    flex-direction: column;
    gap: 24px;

    width: 25%;
}

.day {
    background: #fff;
    color: #0e0e0f; 
}

.night {
    background-color: #0e0e0f;
    color: #e8eaed;
}


/* Detail Page */

.detail-page {
    display: flex;
    flex-direction: row;
    gap: 24px;
}

.header {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.title {
    font-size: 18px;
}

.subtitle {
    font-size: 16px;
    opacity: .6;
}

.text {
    font-size: 14px;
    opacity: .9;
}


/* Project Documentation */

.documentation {
    display: flex;
    justify-content: center;
    align-items: center;

    padding: 56px;

    background-color: #bfffe6;
    border-radius: 12px;
}

/* Navigation */

.back-nav {
    width: fit-content;
    height: auto;

    padding: 2px 8px;
    background-color: #e8eaed;
    border-radius: 4px;
    text-decoration: none;

    font-size: 14px;
}

.nearrow::before {
    content: "\2197";
    font-family: Inter;
}

.documentation-image {
    width: 100%;
}

/* Tool Component */

.toolbar {
    position: absolute;
    bottom: 0;

    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 24px;

    width: fit-content;
    min-height: 90px;
    background-color: #e8eaed;
    border-radius: 16px;
    padding: 24px 24px 18px 24px;

    transition: bottom .15s, opacity .15s;
}

.tool-passive {
    bottom: -12px;
    opacity: 0;
}

.tool-active {
    bottom: 0;
    opacity: 1.0;
}

.tool {

    display: flex;
    justify-content: center;
    align-items: center;

    width: 60px;
    height: 60px;
    padding: 12px;

    background-color: #ffffff;
    color: #000;
    
    border-radius: 12px;
}




